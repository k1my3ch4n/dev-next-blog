{
  "name": "@repo/components",
  "version": "0.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:css-modules && pnpm run build:ts",
    "build:css-modules": "postcss src/**/*.module.scss --config postcss.config.js --base src --dir dist --ext .js",
    "build:ts": "tsc -b",
    "dev": "tsc -w"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.1",
    "postcss-modules": "^6.0.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sass": "^1.88.0",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  }
}
